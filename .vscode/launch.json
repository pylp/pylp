  "version": "0.2.0",
  "configurations": [
    {
      "name": "1. pylp",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/pylp.py",
      "args": [
        // "--help",
        "--pylpfile=./tests/pylpfile.py",
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "justMyCode" : false
    },

    {
      "name": "2a. PyTest (All)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${command:python.interpreterPath}",
      "module": "pytest",
      "cwd": "${workspaceRoot}",
      "env": {},
      "envFile": "${workspaceRoot}/.env",
      "console": "internalConsole",
      "justMyCode": false
    },

    {
      "name": "2b. PyTest (Current file)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-sv",
        "${file}"
      ],
      "cwd": "${workspaceRoot}",
      "env": {},
      "envFile": "${workspaceRoot}/.env",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },

    {
      "name": "2c. PyTest (tests/integration)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-sv",
        "tests/integration"
      ],
      "cwd": "${workspaceRoot}",
      "env": {},
      "envFile": "${workspaceRoot}/.env",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },

  ]
}